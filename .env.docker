# Docker Compose Environment Variables Template
# Copy this file to .env and fill in the values

# ===================
# PostgreSQL Settings
# ===================
PG_DATABASE=stoner_system
PG_USERNAME=stoner
PG_PASSWORD=your_secure_database_password_here

# ===================
# Security Settings
# ===================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_64_char_jwt_secret_here_generate_with_openssl_rand_hex_32
CSRF_SECRET=your_64_char_csrf_secret_here_generate_with_openssl_rand_hex_32

# ===================
# CORS Settings
# ===================
# Production domain (without trailing slash)
CORS_ORIGIN=https://stonersmokeshop.work

# ===================
# Docker Settings
# ===================
# Docker Hub username (for image tagging)
DOCKER_USERNAME=your_docker_username

# Image tag (default: latest)
IMAGE_TAG=latest
